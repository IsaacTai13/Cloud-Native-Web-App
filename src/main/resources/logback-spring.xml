<configuration>
    <!-- Load LOG_DIR from Spring Environment (env, .env, or system property). -->
    <springProperty scope="context" name="LOG_DIR" source="LOG_DIR" defaultValue="/opt/csye6225" />

    <!-- File appender (JSON format) -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/log/app.log</file>
        <append>true</append>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <message/>
                <loggerName fieldName="logger"/>
            </providers>
        </encoder>
    </appender>

    <!-- Console appender for terminal output
       Use pattern for readability; switch to JSON if needed -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Dedicated ACCESS logger (used by AccessLogFilter) -->
    <logger name="ACCESS" level="INFO" additivity="false">
        <appender-ref ref="JSON_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="JSON_FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>